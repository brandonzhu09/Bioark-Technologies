option_settings:
    aws:elasticbeanstalk:container:python:
        WSGIPath: backend.wsgi:application
    aws:elasticbeanstalk:environment:proxy:staticfiles:
        /static: static

container_commands:
    01_migrate:
        command: "source $PYTHONPATH/activate && python manage.py migrate --noinput"
        leader_only: true
    02_loaddata:
        command: "python manage.py loaddata products/fixtures/metadata.json"
        leader_only: true
    03_collectstatic:
        command: "source $PYTHONPATH/activate && python manage.py collectstatic --noinput"
